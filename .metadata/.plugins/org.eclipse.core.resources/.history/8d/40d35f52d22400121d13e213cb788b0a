#ifndef VECTOR2_H_
#define VECTOR2_H_

class Vector2 {
private:
	float x,y, distance, angle;
public:
	Vector2(float x=0,float y=0);
	Vector2(float distance,float angle);
	//get
	float get_angle();
	float get_distance();
	float get_x();
	float get_y();
	//set
	void set_angle(float angle);
	void set_distance(float distance);
	void set_x(float x);
	void set_y(float y);
		
	virtual ~Vector2();
};

#endif /* VECTOR2_H_ */
